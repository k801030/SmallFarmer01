<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/pager_content_padding">

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="1dp">
        <TextView
            android:id="@+id/not_called"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/basic_text_size"
            android:gravity="center"
            android:background="@color/main_bg_color"
            android:textColor="@color/main_text_color"
            android:padding="@dimen/fragment_orders_button_padding"
            android:text="尚未通知"
            />

        <TextView
            android:id="@+id/called"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/basic_text_size"
            android:gravity="center"
            android:background="@color/switcher_default_bg_color"
            android:textColor="@color/switcher_default_text_color"
            android:padding="@dimen/fragment_orders_button_padding"
            android:text="已通知"/>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space" />

    <ListView
        android:id="@+id/order_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/default_bg_color"
        android:dividerHeight="@dimen/pager_content_padding"
        android:listSelector="@color/transparent"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/order_empty"
        android:text="@string/order_empty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="@color/gray_text_color"
        android:textSize="@dimen/larger_text_size"
        android:gravity="center" />
</LinearLayout>