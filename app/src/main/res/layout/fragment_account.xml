<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="@dimen/fragment_orders_item_product_image">
        <View
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <edu.ntu.vison.smallfarmer01.view.MyRoundedImageView
                android:id="@+id/user_profile_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="18dp"
                android:src="@drawable/default_profile_img"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/basic_text_size"
                android:textStyle="bold"
                android:textColor="@color/default_text_color"
                android:text="123"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/log_out_button"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_sign_in_margin"
            android:layout_marginBottom="@dimen/activity_sign_in_margin"
            android:padding="12dp"
            android:minHeight="0dp"
            android:paddingTop="@dimen/activity_sign_in_button_padding"
            android:paddingBottom="@dimen/activity_sign_in_button_padding"
            android:textSize="@dimen/basic_text_size"
            android:background="@color/normal_button"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="@string/log_out_button"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>